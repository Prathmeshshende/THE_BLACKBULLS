# Copy this file to .env and fill your values for real WhatsApp delivery
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886
WHATSAPP_DEFAULT_COUNTRY_CODE=+91
# Optional: set true only for demo mode (no real WhatsApp delivery)
WHATSAPP_ENABLE_MOCK=false

# Optional: real SMS without Twilio (TextBelt)
# Set SMS_PROVIDER=textbelt and provide your TextBelt key
SMS_PROVIDER=
TEXTBELT_API_KEY=

# Optional: real SMS without Twilio (Plivo)
# Set SMS_PROVIDER=plivo and provide Plivo credentials
PLIVO_AUTH_ID=
PLIVO_AUTH_TOKEN=
PLIVO_SRC=
