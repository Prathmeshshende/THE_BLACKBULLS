# Integration service
APP_NAME=Hospital ERP AI Assistant
APP_ENV=dev
APP_JWT_SECRET=change-me-strong-secret
APP_JWT_ALGORITHM=HS256

# ERP OAuth2 client credentials
ERP_BASE_URL=https://erp.example-hospital.com
ERP_TOKEN_URL=https://erp.example-hospital.com/oauth2/token
ERP_CLIENT_ID=your_erp_client_id
ERP_CLIENT_SECRET=your_erp_client_secret
ERP_SCOPE=beds:read claims:read appointments:read records:read

# Caching (seconds)
CACHE_BEDS_TTL=15
CACHE_SLOTS_TTL=30

# Database
DATABASE_URL=sqlite+aiosqlite:///./erp_ai_assistant.db
